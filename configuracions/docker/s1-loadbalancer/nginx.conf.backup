events {
    worker_connections 1024;
}

http {
    upstream php_backend {
        server s2-php:9000;
        server s3-php:9000;
    }

    # Redirigir TODO (HTTP + IP) a HTTPS con dominio
    server {
        listen 80 default_server;
        server_name _;
        
        # Validación Let's Encrypt
        location ^~ /.well-known/acme-challenge/ {
            root /var/www/certbot;
            default_type "text/plain";
            try_files $uri =404;
        }
        
        # Redirigir TODO a HTTPS con dominio
        location / {
            return 301 https://extagram-grup3.duckdns.org$request_uri;
        }
    }

    # Redirigir HTTPS por IP a HTTPS por dominio
    server {
        listen 443 ssl default_server;
        server_name _;
        
        # Certificado (necesario aunque redirija)
        ssl_certificate /etc/letsencrypt/live/extagram-grup3.duckdns.org/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/extagram-grup3.duckdns.org/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        
        # Redirigir a dominio
        return 301 https://extagram-grup3.duckdns.org$request_uri;
    }

    # Servidor HTTPS principal (solo dominio)
    server {
        listen 443 ssl http2;
        server_name extagram-grup3.duckdns.org;

        # Certificados SSL
        ssl_certificate /etc/letsencrypt/live/extagram-grup3.duckdns.org/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/extagram-grup3.duckdns.org/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers on;

        # Security headers
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;

        # Logs
        access_log /var/log/nginx/access.log;
        error_log /var/log/nginx/error.log;

        # CRÍTICO: Rutas específicas ANTES de la genérica
        # Upload Service (S4)
        location = /upload.php {
            fastcgi_pass s4-upload:9000;
            fastcgi_index upload.php;
            fastcgi_param SCRIPT_FILENAME /var/www/html/upload.php;
            fastcgi_param HTTPS on;
            include fastcgi_params;
        }

        location = /delete.php {
            fastcgi_pass s4-upload:9000;
            fastcgi_index delete.php;
            fastcgi_param SCRIPT_FILENAME /var/www/html/delete.php;
            fastcgi_param HTTPS on;
            include fastcgi_params;
        }

        location = /recover.php {
            fastcgi_pass s4-upload:9000;
            fastcgi_index recover.php;
            fastcgi_param SCRIPT_FILENAME /var/www/html/recover.php;
            fastcgi_param HTTPS on;
            include fastcgi_params;
        }

        # Proxy a S5 Images (uploads/)
        location /uploads/ {
            proxy_pass http://s5-images:80;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Proto https;
        }

        # Proxy a S6 Static (CSS, SVG, favicon)
        location ~ \.(css|svg|ico)$ {
            proxy_pass http://s6-static:80;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }

        # PHP Backends genéricos (S2, S3) - extagram.php, login_ldap.php
        location ~ \.php$ {
            fastcgi_pass php_backend;
            fastcgi_index extagram.php;
            fastcgi_param SCRIPT_FILENAME /var/www/html$fastcgi_script_name;
            fastcgi_param HTTPS on;
            include fastcgi_params;
        }

        # Root location
        location / {
            fastcgi_pass php_backend;
            fastcgi_index extagram.php;
            fastcgi_param SCRIPT_FILENAME /var/www/html/extagram.php;
            fastcgi_param HTTPS on;
            include fastcgi_params;
        }
    }
}
